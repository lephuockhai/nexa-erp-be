generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  SUPPER_ADMIN
  ADMIN
  USER
  MANAGER
  EMPLOYEE
}

model User {
  id                  String       @id       @default(uuid())
  name                String            
  email               String       @unique
  phone               String       @unique
  password_hash       String
  is_active           Boolean
  last_login_at       DateTime
  role                Role                   @default(USER)
  @@map("users")
}
